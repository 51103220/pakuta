<% content_for :title do %>
 		Pakuta | Sign Up
	<% end %>
<div class="section-group pakuta">
	<%= image_tag("subscribe.jpg", :alt => "Pakuta", :class=>"background") %>
	<div class="section">
		<section>
			<div class="container">
				<div class="row">
					<div class="col-md-6 slogan">
						<h1 id="slogan">Take a boat and <span>Pakuta</span></h1>
						<%=link_to "I'm a pakuta ! Let me in", root_path%></li>
					</div>
					<div class="col-md-6 form-content">
						<%= form_for(user,:html => {:class => 'signup_form'}) do |f| %>
						<%= render :partial => 'layouts/error_messages', :locals => {:user => user } %>
						<div class="form-group">
						<%= f.label :name %>
						<%= f.text_field :name,:value =>"", :placeholder => "Honestly, Choose a unique name...",:class =>"form-control" %>
						</div>
						<div class="form-group">
						<%= f.label :email %>						
						<%= f.email_field :email, :value =>"", :placeholder => "We will identify...",:class =>"form-control" %>
						</div>
						<div class="form-group">
						<%= f.label :password %>
						<%= f.password_field :password,:value=>"",:placeholder => "Your password",:class =>"form-control" %>
						</div>
						<div class="form-group">
						<%= f.label :password_confirmation, "Confirmation" %>
						<%= f.password_field :password_confirmation,:value=>"",:placeholder => "Confirm your password",:class =>"form-control" %>
						</div>
						<%= f.submit "Now Pakuta !", class: "btn btn-primary dedo-btn" %>
						<% end %>
					</div>
				</div>
			</div>
		</section>
	</div>
</div>