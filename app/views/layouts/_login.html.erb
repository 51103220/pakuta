<div class="section-group pakuta">
	<%= image_tag("subscribe.jpg", :alt => "Pakuta", :class=>"background") %>
	<div class="section">
		<section>
			<div class="container">
				<div class="row">
					<div class="col-md-6">
						<h1 id="slogan">Take a Coffee and Pakuta</h1>
					</div>
					<div class="col-md-6">
						
						<form id="login" class="login-form" data-animation="fadeInUp" action="/" method="get">
							<div class="form-group">
								<input name="email" id="email" type="email" class="form-control" placeholder="Email">
							</div>
							<div class="form-group">
								<input name="password" id="password" type="password" class="form-control" placeholder="password">
							</div>
							<div class="center-block">
								<button type="button" class="btn btn-default dedo-btn">login</button>
							</div>							
							<div id="response"></div>
						</form>
					</div>
				</div>
			</div>
		</section>
	</div>
</div>