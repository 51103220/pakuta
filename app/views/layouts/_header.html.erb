<div id="header" class="top-menu tm-fixonscroll">
   <header class="shadow-down">
      <div class="container">
         <div class="row">
            <div class="col-md-2 tm-logo">
               <a href="/"><%= image_tag("logo_white.png", :alt => "Pakuta") %></a>
               <p class="tm-site-descr">Set you pictures on fire</p>
            </div>
            <div class="col-md-2 tm-menu">
               <div class="comment-form">
                  <form role="form" class="contact-form">
                     <div class="form-group">
                     <input class="form-control" type="text" id="input_message" placeholder="Search">
                     </div>
                  </form>
               </div>
            </div>
            <div class="col-md-8 tm-menu">
               <nav>
                  <ul class="top-main-menu mtmenu">
                     <% if logged_in? %>
                        <li><%=link_to "Profile",controller: 'users', action: 'show' , name:current_user.name%></li>
                        <li><%= link_to "Log out", logout_path, method: "delete" %></li>
                     <% else %>
                        <li><%=link_to "Login", login_path%></li>
                        <li><%=link_to "Signup", signup_path%></li>
                     <% end %>
                  </ul> <!-- top-main-menu -->
               </nav>
            </div>
         </div> <!-- row -->
      </div> <!-- container -->
   </header>
</div> <!-- header -->
